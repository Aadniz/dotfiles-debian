#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
    #status_command while echo '月火水木金土日' | cut -c $(( $(date +%u)*3-2 ))-$(( $(date +%u)*3 )); do sleep 1; done
    font pongo:Font Awesome 6 Pro Solid, Arimo Nerd Font Normal 11

    colors {
        statusline #ffffff
        background #111111
        separator #A3895C
        inactive_workspace #32323200 #32323200 #5c5c5c
        focused_workspace #7d98ec #7d98ec #041520
        active_workspace #7d98ec #7d98ec #041520
        inactive_workspace #191b22 #191b22 #e3e5d8
        urgent_workspace #CC7573 #CC7573 #041520
    }
}

